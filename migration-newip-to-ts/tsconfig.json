{
  "compilerOptions": {
    "target": "es2016",
    "module": "es6",                           
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "noImplicitAny": true,
  "strictNullChecks": true
}
